<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:fontFamily">@font/arima_madurai</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/amita</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="pagerTitleStripText">
        <item name="android:fontFamily">@font/arima_madurai</item>
    </style>

    <style name="switchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/button_normal</item>
        <item name="colorSwitchThumbNormal">@color/text</item>
        <item name="android:colorForeground">@color/main_background</item>
    </style>

    <style name="NonFullscreenCSettings" parent="AppTheme">
        <item name="windowActionBarOverlay">false</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowBackground">@color/main_background</item>
    </style>
    <!-- ToolBar -->
    <!-- CardView -->
    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/card_view_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_view_margin</item>
        <item name="cardCornerRadius">@dimen/card_view_card_corner_radius</item>
        <item name="cardElevation">@dimen/card_view_card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>
    <!-- Button styles -->
    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>
    <style name="ButtonStyle" parent="BaseButtonStyle">
        <item name="android:background">@color/button_normal</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

</resources>
